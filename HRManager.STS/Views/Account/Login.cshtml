@model LoginViewModel

<div class="login-page">
    <link rel="stylesheet" href="~/css/mycss.css" />
    <!--<div class="lead">
        <h1>Login</h1>
    </div>-->

    <partial name="_ValidationSummary" />

    <div class="row d-flex justify-content-center align-items-center">

        @if (Model.EnableLocalLogin)
        {   
            <div class="col-sm-5">
                <div class="card rounded-3 shadow-lg">

                    <div class="card-body ps-4 pe-4 pt-3 pb-3">
                        <form asp-route="Login">
                            <input type="hidden" asp-for="ReturnUrl" />
                            <h3 class="text-color pt-3 pb-2 ps-3 pe-3">Login</h3>

                            <div class="form-group pt-2 pb-2 ps-3 pe-3">
                                <label class='mb-1' asp-for="Username"></label>
                                <input class="form-control" asp-for="Username" autofocus>
                            </div>
                            <div class="form-group pt-2 pb-2 ps-3 pe-3">
                                <label class='mb-1' asp-for="Password"></label>
                                <input type="password" class="form-control" asp-for="Password" autocomplete="off">
                            </div>
                            @if (Model.AllowRememberLogin)
                            {
                                <div class="form-group pt-2 pb-2 ps-3 pe-3">
                                    <div class="form-check">
                                        <input class="form-check-input" asp-for="RememberLogin">
                                        <label class="form-check-label" asp-for="RememberLogin">
                                            Remember My Login
                                        </label>
                                    </div>
                                </div>
                            }
                            
                            <div class="pt-2 pb-3 ps-3 pe-3">
                                <button class="btn btn-primary me-3" name="button" value="login">Login</button>
                                <button class="btn btn-secondary" name="button" value="cancel">Cancel</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>     